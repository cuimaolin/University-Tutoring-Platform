<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>studentListServlet</servlet-name>
        <servlet-class>servlet.StudentListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>teacherListServlet</servlet-name>
        <servlet-class>servlet.TeacherListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>teacherRegisterServlet</servlet-name>
        <servlet-class>servlet.TeacherRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>studentRegisterServlet</servlet-name>
        <servlet-class>servlet.StudentRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>studentListServlet</servlet-name>
        <url-pattern>/listStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>teacherListServlet</servlet-name>
        <url-pattern>/listTeacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>teacherRegisterServlet</servlet-name>
        <url-pattern>/registerTeacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>studentRegisterServlet</servlet-name>
        <url-pattern>/registerStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


</web-app>